<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:Maui_App"
             x:Class="Maui_App.MainPage">
    <ContentPage.Content>
        <StackLayout>
            <Button x:Name="Btn_KlickMich"
                    Text="Klick Mich"
                    Clicked="Btn_KlickMich_Clicked"
                    Margin="10, 20, 30, 40"
                    FontSize="Small"/>
            <Entry Keyboard="Chat"/>
            <Picker SelectedIndex="1">
                <Picker.Items>
                    <x:String>Auswahl 1</x:String>
                    <x:String>Auswahl 2</x:String>
                </Picker.Items>
            </Picker>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
