<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:sys="clr-namespace:System;assembly=System.Runtime"
             x:Class="Maui_App.Resources_Styles"
             Title="Resources_Styles">
    <ContentPage.Resources>
        <Color x:Key="Blue300Accent">#FFE5B9</Color>

        <Style TargetType="Label" x:Key="Sty_Lbl_Base">
            <Setter Property="TextColor" Value="Red"/>
        </Style>
        
        <Style TargetType="Label" BasedOn="{StaticResource Sty_Lbl_Base}">
            <Setter Property="FontSize" Value="30"/>
            <Setter Property="BackgroundColor" Value="HotPink"/>
        </Style>
        
    </ContentPage.Resources>
    <StackLayout>
        <Label Text="HALLO"
               FontSize="{x:Static sys:Math.PI}"
               VerticalOptions="Center" 
               HorizontalOptions="Center" 
               BackgroundColor="{StaticResource Blue300Accent}"/>
    </StackLayout>
</ContentPage>
